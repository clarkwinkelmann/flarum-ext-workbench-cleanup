{
    "name": "clarkwinkelmann/flarum-ext-workbench-cleanup",
    "description": "Inspect and delete unused files in the development workbench folder",
    "keywords": [
        "flarum",
        "developer"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "flarum/core": "^1.2",
        "ext-json": "*"
    },
    "authors": [
        {
            "name": "Clark Winkelmann",
            "homepage": "https://clarkwinkelmann.com/",
            "email": "clark.winkelmann@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/clarkwinkelmann/flarum-ext-workbench-cleanup"
    },
    "autoload": {
        "psr-4": {
            "ClarkWinkelmann\\WorkbenchCleanup\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Workbench Cleanup",
            "category": "feature",
            "icon": {
                "name": "fas fa-eraser",
                "backgroundColor": "#684ba6",
                "color": "#fff"
            }
        }
    }
}
